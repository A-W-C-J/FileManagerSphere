<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/white"
             tools:context=".fragment.StartedFragment" android:id="@+id/frame">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:src="@drawable/ic_folder_started"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView3"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.495" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="76dp"/>
        <TextView
                android:text="Gerencie seus dados pessoais com total segurança"
                android:layout_width="344dp"
                android:layout_height="46dp" android:id="@+id/textView3"
                android:fontFamily="@font/roboto_bold" android:textSize="20sp"
                android:gravity="center_horizontal" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginTop="40dp"
                android:textColor="@color/black"/>
        <TextView
                android:text="Toque no botão “Começar” para continuar"
                android:layout_width="344dp"
                android:layout_height="46dp" android:id="@+id/textView5"
                android:textSize="15sp"
                android:gravity="center_horizontal" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.492"
                tools:ignore="MissingConstraints" app:layout_constraintTop_toBottomOf="@+id/textView3"
                android:layout_marginTop="32dp"/>
        <TextView
                android:text="@string/policy_and_terms"
                android:layout_width="344dp"
                android:layout_height="46dp" android:id="@+id/textView6"
                android:textSize="14sp"
                android:gravity="center_horizontal" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.492"
                tools:ignore="MissingConstraints" app:layout_constraintTop_toBottomOf="@+id/textView5"
                android:layout_marginTop="96dp"/>
        <Button
                android:layout_width="wrap_content"
                android:background="@drawable/background_button"
                android:layout_height="wrap_content" android:id="@+id/btn_started"
                android:text="Continuar"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="52dp"
                app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>