<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".fragment.RecentFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="?attr/colorPrimary"
            android:elevation="18dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/cBaseItems" android:layout_marginTop="88dp" android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.0">

        <ImageView
                android:src="@drawable/baseline_settings_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/iv_settings"
                app:tint="?attr/colorOnPrimary"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.971" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.902"
                android:layout_marginEnd="4dp" android:layout_marginBottom="4dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_space_free"/>

        <TextView
                android:id="@+id/tv_space_free"
                android:layout_width="77dp"
                android:layout_height="26dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/gb"
                android:textSize="22sp"
                android:textColor="?attr/colorOnSurfaceInverse"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cp_space"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.569"
                app:layout_constraintVertical_bias="0.121"
                android:gravity="center" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>
        <LinearLayout
                android:layout_width="77dp"
                android:layout_height="21dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:background="@drawable/rectangle_2"
                tools:ignore="MissingConstraints"
                android:gravity="center_horizontal|center_vertical" android:id="@+id/linearLayout"
                app:layout_constraintStart_toEndOf="@+id/cp_space"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.568"
                app:layout_constraintVertical_bias="0.502" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp" android:layout_marginEnd="16dp">

            <TextView
                    android:id="@+id/free_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:textSize="10sp"
                    android:textColor="?attr/colorSurfaceInverse"
                    android:text="@string/free_space"
                    android:gravity="top"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="77dp"
                android:layout_height="21dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:background="@drawable/rectangle_2"
                tools:ignore="MissingConstraints"
                android:gravity="center_horizontal|center_vertical"
                app:layout_constraintEnd_toStartOf="@+id/cp_space"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.16"
                android:layout_marginStart="16dp" android:id="@+id/linearLayout5"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="16dp">

            <TextView
                    android:id="@+id/used_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:textSize="10sp"
                    android:textColor="?attr/colorSurfaceInverse"
                    android:text="@string/used_space"
                    android:gravity="top"
            />
        </LinearLayout>
        <TextView
                android:id="@+id/tv_space_used"
                android:layout_width="77dp"
                android:layout_height="26dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/gb"
                android:textSize="22sp"
                android:textColor="?attr/colorOnSurfaceInverse"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintVertical_bias="0.14"
                android:gravity="center" app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
                app:layout_constraintEnd_toStartOf="@+id/cp_space" app:layout_constraintHorizontal_bias="0.166"
                android:layout_marginEnd="16dp"/>
        <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progress="75"
                app:trackCornerRadius="10dp"
                app:trackColor="?attr/colorPrimaryInverse"
                app:indicatorColor="?attr/colorOnPrimary" app:indicatorSize="100dp"
                app:trackThickness="10dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:id="@+id/cp_space"
                android:layout_marginTop="32dp" android:layout_marginBottom="32dp"/>
        <TextView
                android:id="@+id/tv_space_total"
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/gb_total"
                android:textSize="32sp"
                android:textColor="?attr/colorOnSurfaceInverse"
                android:gravity="center_horizontal|center_vertical"
                app:layout_constraintEnd_toEndOf="@+id/cp_space"
                app:layout_constraintStart_toStartOf="@+id/cp_space"
                app:layout_constraintBottom_toBottomOf="@+id/cp_space"
                app:layout_constraintTop_toTopOf="@+id/cp_space"/>
        <TextView
                android:text="GB"
                android:layout_width="67dp"
                android:layout_height="28dp" android:id="@+id/textView2"
                app:layout_constraintEnd_toEndOf="@+id/cp_space" app:layout_constraintStart_toStartOf="@+id/cp_space"
                android:textColor="?attr/colorOnSurfaceInverse" app:layout_constraintHorizontal_bias="0.523"
                android:textSize="16sp"
                android:gravity="center_horizontal" app:layout_constraintTop_toTopOf="@+id/cp_space"
                app:layout_constraintBottom_toBottomOf="@+id/cp_space" app:layout_constraintVertical_bias="0.814"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:background="?attr/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/cBaseItems" android:id="@+id/cInternalStorage"
            android:layout_marginTop="32dp" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp">

        <ImageView
                android:src="@drawable/ic_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.118"
                app:tint="?attr/colorOnSurfaceInverse" app:layout_constraintBottom_toTopOf="@+id/pb_space"
                android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:text="@string/internal_st"
                android:textSize="12sp"
                tools:ignore="MissingConstraints"
                android:textColor="?attr/colorOnSurfaceInverse" android:elegantTextHeight="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.12" android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginStart="8dp"
                android:layout_marginBottom="7dp" app:layout_constraintBottom_toTopOf="@+id/pb_space"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_space_of"
                android:text="34GB of 128GB"
                android:textSize="9sp"
                tools:ignore="MissingConstraints"
                android:textColor="?attr/colorOnSurfaceInverse" android:elegantTextHeight="false"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/pb_space" android:layout_marginTop="16dp"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:text="Explore"
                android:textSize="9sp"
                tools:ignore="MissingConstraints"
                android:textColor="?attr/colorOnSurfaceInverse" android:elegantTextHeight="false"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/pb_space"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="8dp"/>
        <com.google.android.material.progressindicator.LinearProgressIndicator
                android:layout_width="0dp"
                android:layout_height="11dp"
                android:progress="75"
                app:trackCornerRadius="10dp"
                app:trackColor="?attr/colorPrimaryInverse"
                app:indicatorColor="?attr/colorOnPrimary"
                app:indicatorSize="100dp"
                app:trackThickness="10dp"
                android:id="@+id/pb_space" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.485"
                android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cCategoryItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="?attr/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/cInternalStorage" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" android:layout_marginEnd="16dp" android:layout_marginStart="16dp">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:listitem="@layout/category_file_item"
                android:id="@+id/recyclerView" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="1.0" android:contentDescription="@string/app_name"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:text="Recent Images"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.29"
            app:layout_constraintTop_toBottomOf="@+id/cCategoryItem" android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:background="?attr/colorPrimary"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/cRecentImage"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="188dp" tools:listitem="@layout/recent_image_item"
                android:contentDescription="@string/_24_de_mar" android:id="@+id/recy_recents_images"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>