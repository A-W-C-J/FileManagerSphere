<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_height="wrap_content"
      android:padding="4dp"
        android:layout_width="match_parent">

    <com.etb.filemanager.manager.files.ui.SelectableMaterialCardView
            android:layout_height="75dp"
            android:layout_width="match_parent"
            android:clickable="true"
            android:checkable="true"
            android:id="@+id/itemFile" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:cardBackgroundColor="?attr/colorOnSecondary"
            app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
                android:layout_height="73dp"
                android:layout_width="match_parent"
                android:padding="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent">

            <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp" app:srcCompat="@drawable/ic_cj"
                    android:id="@+id/iconPreview" android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:visibility="visible"
                    app:layout_constraintEnd_toEndOf="@+id/itemBorder"
                    app:layout_constraintTop_toTopOf="@+id/itemBorder"
                    app:layout_constraintBottom_toBottomOf="@+id/itemBorder"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="56dp"
                    android:gravity="center"
                    android:background="@drawable/background_icon_item"

                    android:layout_height="55dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.47" android:id="@+id/itemBorder">
                <ImageView
                        android:layout_height="30dp"
                        android:layout_width="29dp"
                        android:src="@drawable/ic_folder_1"
                        android:layout_centerVertical="true"
                        android:id="@+id/iconFile" />
            </LinearLayout>
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="2dp"
                    android:text="@string/app_name"
                    android:id="@+id/fileTitle"
                    app:layout_constraintStart_toEndOf="@+id/itemBorder" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.04" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="4dp"/>
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toEndOf="@id/fileDate"
                    android:layout_below="@id/fileTitle"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:text="@string/_16_kb"
                    android:id="@+id/fileSize" android:visibility="gone" tools:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.033" app:layout_constraintStart_toEndOf="@+id/itemBorder"
                    android:layout_marginBottom="4dp" app:layout_constraintTop_toBottomOf="@+id/fileTitle"/>
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/fileTitle"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:text="@string/_24_de_mar"
                    android:id="@+id/fileDate" android:visibility="gone" tools:visibility="visible"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_bias="0.78"
                    app:layout_constraintStart_toEndOf="@+id/fileSize"
                    app:layout_constraintHorizontal_bias="0.973"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </com.etb.filemanager.manager.files.ui.SelectableMaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>